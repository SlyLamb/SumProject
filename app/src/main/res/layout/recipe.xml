<LinearLayout android:layout_width="368dp"
    android:layout_height="495dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/img_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txt_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_add_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+FAV" />

        <Button
            android:id="@+id/btn_add_cooked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+COOKED" />

        <Button
            android:id="@+id/btn_add_meal_planner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+PLANNER" />

        <TextView
            android:id="@+id/txt_recipe_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_add_shopping_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Shopping List" />

        <WebView
            android:id="@+id/wvw_publisher_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</LinearLayout>