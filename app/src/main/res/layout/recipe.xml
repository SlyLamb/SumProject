<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.RecipeActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/img_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txt_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_add_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+FAV" />

        <Button
            android:id="@+id/btn_add_cooked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+COOKED" />

        <Button
            android:id="@+id/btn_add_meal_planner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+PLANNER" />

        <TextView
            android:id="@+id/txt_recipe_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_add_shopping_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Shopping List" />

        <WebView
            android:id="@+id/wvw_publisher_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>