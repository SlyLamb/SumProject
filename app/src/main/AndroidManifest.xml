<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slylamb.pocketcuisine">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Views.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.HomePageActivity"
            android:parentActivityName=".Views.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.SearchRecipeActivity"
            android:parentActivityName=".Views.HomePageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.ShoppingListActivity"
            android:parentActivityName=".Views.HomePageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.FavouritePageActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Views.RecipeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.MealPlannerActivity"
            android:parentActivityName=".Views.HomePageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.PlannedMealsActivity"
            android:parentActivityName=".Views.MealPlannerActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".Views.PocketCuisineActivity"></activity>
    </application>

</manifest>